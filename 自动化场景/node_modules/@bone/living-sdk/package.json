{
  "name": "@bone/living-sdk",
  "version": "0.1.9",
  "description": "阿里云IoT生活平台JS SDK",
  "main": "lib",
  "scripts": {
    "test": "jest",
    "debugTest": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "build": "rm -rf lib; tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm test && npm run build"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/src/**/*.test.+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "src/__tests__/index.RN.test.ts"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.alibaba-inc.com:bone/living-sdk.git"
  },
  "keywords": [
    "sdk"
  ],
  "author": "amos",
  "license": "ISC",
  "devDependencies": {
    "@bone/bone-mobile": "^2.2.0",
    "@types/jest": "^22.2.0",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "typescript": "^2.7.2",
    "jest-react-native": "^18.0.0"
  },
  "dependencies": {
    "@bone/sdk-base": "^0.1.0"
  },
  "bnpm": {
    "mode": "yarn"
  }
}
